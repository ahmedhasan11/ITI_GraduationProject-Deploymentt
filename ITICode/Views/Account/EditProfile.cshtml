                    </div>
                    <h5 class="mt-3">@Model.FullName</h5>
                    <p class="text-muted">@Model.Email</p>
                    <a asp-action="EditProfile" asp-controller="Account" class="btn btn-primary mt-2">
                        <i class="fa fa-edit me-1"></i> Edit Profile
                    </a>
                </div>
            </div>

            <div class="card mt-3">
                <div class="list-group list-group-flush">
                    <a class="list-group-item list-group-item-action active" data-bs-toggle="pill" href="#personal-info">
                        <i class="ti ti-user me-2"></i> Personal Info
                    </a>
                    <a class="list-group-item list-group-item-action" data-bs-toggle="pill" href="#orders">
                        <i class="ti ti-shopping-cart me-2"></i> Orders
                    </a>
                    <a class="list-group-item list-group-item-action" data-bs-toggle="pill" href="#appointments">
                        <i class="ti ti-archive me-2"></i> Appointments
                    </a>
                </div>
            </div>
        </div>

        <!-- Content -->
        <div class="col-md-8">
            <div class="tab-content">
                <!-- Personal Info -->
                <div class="tab-pane fade show active" id="personal-info">
                    <div class="card">
                        <div class="card-body">
                            <h5>Personal Information</h5>
                            <hr />

                            <dl class="row">
                                <dt class="col-sm-4">Full Name</dt>
                                <dd class="col-sm-8">@Model.FullName</dd>

                                <dt class="col-sm-4">Email</dt>
                                <dd class="col-sm-8">@Model.Email</dd>

                                @if (Model.Role == "Doctor")
                                {
                                    <dt class="col-sm-4">Specialty</dt>
                                    <dd class="col-sm-8">@Model.Specialty</dd>

                                    <dt class="col-sm-4">License</dt>
                                    <dd class="col-sm-8">@Model.LicenseNumber</dd>

                                    <dt class="col-sm-4">Bio</dt>
                                    <dd class="col-sm-8">@Model.Bio</dd>
                                }
                                else
                                {
                                    <dt class="col-sm-4">Date of Birth</dt>
                                    <dd class="col-sm-8">@Model.DateOfBirth?.ToString("yyyy-MM-dd")</dd>

                                    <dt class="col-sm-4">Gender</dt>
                                    <dd class="col-sm-8">@Model.Gender</dd>

                                    <dt class="col-sm-4">Address</dt>
                                    <dd class="col-sm-8">@Model.Address</dd>
