                                    {
                                        foreach (var order in Model.Orders)
                                        {
                                            <tr>
                                                <td>@order.OrderId</td>
                                                <td>
                                                    @foreach (var item in order.Items)
                                                    {
                                                        <div>@item.MedicineName (@item.Quantity)</div>
                                                    }
                                                </td>
                                                <td>@order.Status</td>
                                                <td>@order.CreatedAt</td>
                                                <td>@order.Total</td>
                                            </tr>
                                        }
                                    }
