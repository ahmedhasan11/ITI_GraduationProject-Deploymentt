@using ITI_Hackathon.ServiceContracts.DTO
@model OrderDetailsDto

<style>
    :root {
        --primary-color: #2a7de1;
        --primary-light: #e8f2ff;
        --secondary-color: #3bbab5;
        --secondary-light: #e6f7f6;
        --accent-color: #ff6b6b;
        --accent-light: #ffeeee;
        --light-bg: #f8fafc;
        --light-border: #e2e8f0;
        --dark-text: #1e293b;
        --light-text: #64748b;
        --success-color: #10b981;
        --warning-color: #f59e0b;
    }

    .order-details-container {
        padding: 100px 0 50px;
        background: linear-gradient(135deg, var(--light-bg) 0%, #f1f5f9 100%);
        min-height: 100vh;
    }

    .order-card {
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.05);
        overflow: hidden;
        margin-bottom: 30px;
    }

    .order-header {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
        color: white;
        padding: 25px;
        position: relative;
    }

        .order-header h2 {
            font-weight: 700;
            margin-bottom: 5px;
            font-size: 1.8rem;
        }

        .order-header p {
            margin-bottom: 0;
            opacity: 0.9;
        }

    .order-badge {
        position: absolute;
        top: 25px;
        right: 25px;
        background: rgba(255,255,255,0.2);
        padding: 8px 15px;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.9rem;
        backdrop-filter: blur(10px);
    }

    .order-body {
        padding: 25px;
    }

    .order-info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .info-card {
        background: var(--light-bg);
        border-radius: 12px;
        padding: 20px;
        border-left: 4px solid var(--primary-color);
    }

        .info-card h5 {
            font-weight: 600;
            color: var(--dark-text);
            margin-bottom: 10px;
            font-size: 1rem;
        }

        .info-card p {
            margin-bottom: 0;
            color: var(--light-text);
            font-size: 0.95rem;
        }

        .info-card.highlight {
            background: linear-gradient(135deg, var(--primary-light) 0%, var(--secondary-light) 100%);
            border-left: 4px solid var(--secondary-color);
        }

    .items-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        .items-table th {
            background: var(--primary-light);
            color: var(--dark-text);
            font-weight: 600;
            padding: 15px;
            text-align: left;
            border-bottom: 2px solid var(--light-border);
        }

        .items-table td {
            padding: 15px;
            border-bottom: 1px solid var(--light-border);
            color: var(--dark-text);
        }

        .items-table tr:last-child td {
            border-bottom: none;
        }

        .items-table tr:hover {
            background: var(--light-bg);
        }

    .medicine-name {
        font-weight: 600;
        color: var(--primary-color);
    }

    .price-cell {
        font-weight: 600;
        color: var(--primary-color);
    }

    .total-row {
        background: var(--primary-light) !important;
        font-weight: 700;
    }

        .total-row td {
            color: var(--dark-text);
            font-size: 1.1rem;
            padding-top: 20px;
            padding-bottom: 20px;
        }

    .action-buttons {
        display: flex;
        gap: 15px;
        margin-top: 30px;
        flex-wrap: wrap;
    }

    .btn-primary-custom {
        background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
        border: none;
        color: white;
        padding: 12px 25px;
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s;
        box-shadow: 0 4px 10px rgba(42, 125, 225, 0.3);
    }

        .btn-primary-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(42, 125, 225, 0.4);
            color: white;
        }

    .btn-outline-custom {
        background: transparent;
        border: 2px solid var(--primary-color);
        color: var(--primary-color);
        padding: 10px 23px;
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s;
    }

        .btn-outline-custom:hover {
            background: var(--primary-color);
            color: white;
            transform: translateY(-2px);
        }

    .status-badge {
        display: inline-block;
        padding: 6px 12px;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.85rem;
    }

    .status-pending {
        background: #fff3cd;
        color: #856404;
    }

    .status-confirmed {
        background: #d1ecf1;
        color: #0c5460;
    }

    .status-processing {
        background: #d1ecf1;
        color: #0c5460;
    }

    .status-shipped {
        background: #d1edff;
        color: #004085;
    }

    .status-delivered {
        background: #d4edda;
        color: #155724;
    }

    .status-cancelled {
        background: #f8d7da;
        color: #721c24;
    }

    .print-section {
        text-align: right;
        margin-bottom: 20px;
    }

    .print-btn {
        background: var(--light-bg);
        border: 1px solid var(--light-border);
        color: var(--dark-text);
        padding: 8px 15px;
        border-radius: 8px;
        font-size: 0.9rem;
        transition: all 0.2s;
    }

        .print-btn:hover {
            background: var(--primary-light);
            color: var(--primary-color);
        }

    @@media (max-width: 768px) {
        .order-info-grid {
            grid-template-columns: 1fr;
        }

        .action-buttons {
            flex-direction: column;
        }

        .items-table {
            display: block;
            overflow-x: auto;
        }
    }
</style>

<div class="order-details-container">
    <div class="container">
        <div class="order-card">
            <div class="order-header">
                <h2><i class="fas fa-receipt me-2"></i> Order Details</h2>
                <p>Review your order information and tracking details</p>
                <div class="order-badge">
                    <span class="status-badge status-@Model.Status.ToLower()">@Model.Status</span>
                </div>
            </div>

            <div class="order-body">
                <div class="print-section">
                    <button class="print-btn" onclick="window.print()">
                        <i class="fas fa-print me-1"></i> Print Order
                    </button>
                </div>

                <div class="order-info-grid">
                    <div class="info-card">
                        <h5><i class="fas fa-hashtag me-2"></i> Order ID</h5>
                        <p>#@Model.Id</p>
                    </div>

                    <div class="info-card">
                        <h5><i class="fas fa-calendar me-2"></i> Order Date</h5>
                        <p>@Model.CreatedAt.ToString("MMMM dd, yyyy 'at' hh:mm tt")</p>
                    </div>

                    <div class="info-card highlight">
                        <h5><i class="fas fa-money-bill-wave me-2"></i> Total Amount</h5>
                        <p class="price-cell">$@Model.Total.ToString("0.00")</p>
                    </div>

                    <div class="info-card">
                        <h5><i class="fas fa-truck me-2"></i> Delivery Method</h5>
                        <p>Standard Delivery (2-3 business days)</p>
                    </div>
                </div>

                <h4 class="mb-4"><i class="fas fa-pills me-2"></i> Order Items</h4>

                <div class="table-responsive">
                    <table class="items-table">
                        <thead>
                            <tr>
                                <th>Medicine</th>
                                <th>Quantity</th>
                                <th>Unit Price</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td class="medicine-name">@item.MedicineName</td>
                                    <td>@item.Quantity</td>
                                    <td class="price-cell">$@item.UnitPrice.ToString("0.00")</td>
                                    <td class="price-cell">$@((item.Quantity * item.UnitPrice).ToString("0.00"))</td>
                                </tr>
                            }
                            <tr class="total-row">
                                <td colspan="3" class="text-end"><strong>Grand Total:</strong></td>
                                <td class="price-cell"><strong>$@Model.Total.ToString("0.00")</strong></td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <div class="action-buttons">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary-custom">
                        <i class="fas fa-home me-2"></i> Back to Home
                    </a>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-custom">
                        <i class="fas fa-shopping-cart me-2"></i> Continue Shopping
                    </a>
                    <a href="#" class="btn btn-outline-custom">
                        <i class="fas fa-headset me-2"></i> Contact Support
                    </a>
                </div>
            </div>
        </div>

        <!-- Order Tracking Progress -->
        <div class="order-card mt-4">
            <div class="order-body">
                <h4 class="mb-4"><i class="fas fa-map-marker-alt me-2"></i> Order Tracking</h4>

                <div class="tracking-progress">
                    <div class="steps">
                        <div class="step @(Model.Status != "Pending" ? "completed" : "active")">
                            <div class="step-icon">
                                <i class="fas fa-shopping-cart"></i>
                            </div>
                            <div class="step-label">Order Placed</div>
                            <div class="step-date">@Model.CreatedAt.ToString("MMM dd")</div>
                        </div>

                        <div class="step @(Model.Status == "Confirmed" || Model.Status == "Processing" || Model.Status == "Shipped" || Model.Status == "Delivered" ? "completed" : "") @(Model.Status == "Confirmed" ? "active" : "")">
                            <div class="step-icon">
                                <i class="fas fa-check-circle"></i>
                            </div>
                            <div class="step-label">Confirmed</div>
                            <div class="step-date">@Model.CreatedAt.AddHours(1).ToString("MMM dd")</div>
                        </div>

                        <div class="step @(Model.Status == "Processing" || Model.Status == "Shipped" || Model.Status == "Delivered" ? "completed" : "") @(Model.Status == "Processing" ? "active" : "")">
                            <div class="step-icon">
                                <i class="fas fa-cog"></i>
                            </div>
                            <div class="step-label">Processing</div>
                            <div class="step-date">@Model.CreatedAt.AddHours(2).ToString("MMM dd")</div>
                        </div>

                        <div class="step @(Model.Status == "Shipped" || Model.Status == "Delivered" ? "completed" : "") @(Model.Status == "Shipped" ? "active" : "")">
                            <div class="step-icon">
                                <i class="fas fa-shipping-fast"></i>
                            </div>
                            <div class="step-label">Shipped</div>
                            <div class="step-date">@Model.CreatedAt.AddDays(1).ToString("MMM dd")</div>
                        </div>

                        <div class="step @(Model.Status == "Delivered" ? "completed" : "") @(Model.Status == "Delivered" ? "active" : "")">
                            <div class="step-icon">
                                <i class="fas fa-home"></i>
                            </div>
                            <div class="step-label">Delivered</div>
                            <div class="step-date">@Model.CreatedAt.AddDays(2).ToString("MMM dd")</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .tracking-progress {
        padding: 20px 0;
    }

    .steps {
        display: flex;
        justify-content: space-between;
        position: relative;
        margin: 0 40px;
    }

        .steps::before {
            content: '';
            position: absolute;
            top: 30px;
            left: 0;
            right: 0;
            height: 3px;
            background: var(--light-border);
            z-index: 1;
        }

    .step {
        display: flex;
        flex-direction: column;
        align-items: center;
        position: relative;
        z-index: 2;
        flex: 1;
    }

    .step-icon {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background: white;
        border: 3px solid var(--light-border);
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 10px;
        font-size: 1.2rem;
        color: var(--light-text);
    }

    .step.active .step-icon {
        border-color: var(--primary-color);
        background: var(--primary-color);
        color: white;
    }

    .step.completed .step-icon {
        border-color: var(--success-color);
        background: var(--success-color);
        color: white;
    }

    .step-label {
        font-size: 0.85rem;
        color: var(--light-text);
        text-align: center;
        margin-bottom: 5px;
    }

    .step.active .step-label,
    .step.completed .step-label {
        color: var(--dark-text);
        font-weight: 600;
    }

    .step-date {
        font-size: 0.75rem;
        color: var(--light-text);
    }

    @@media (max-width: 992px) {
        .steps {
            flex-direction: column;
            align-items: flex-start;
            margin: 0;
        }

            .steps::before {
                display: none;
            }

        .step {
            flex-direction: row;
            margin-bottom: 20px;
            width: 100%;
        }

        .step-icon {
            margin-right: 15px;
            margin-bottom: 0;
        }

        .step-content {
            text-align: left;
        }
    }
</style>