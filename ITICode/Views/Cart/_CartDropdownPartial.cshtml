@model IEnumerable<ITI_Hackathon.ServiceContracts.DTO.CartItemDto>

<h6 class="dropdown-header fw-bold mb-2">
    Your Cart <span class="text-primary">(@ViewBag.Count items)</span>
</h6>
<hr class="dropdown-divider">
@if (Model != null && Model.Any())
{
    @foreach (var item in Model)
    {
        <div class="cart-item px-3 mb-2">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="mb-0">@item.MedicineName</h6>
                    <small class="text-muted">Qty: @item.Quantity</small>
                </div>
                <span class="fw-bold text-primary">$@(item.UnitPrice* item.Quantity)</span>
            </div>
        </div>
    }
}
else
{
    <p class="text-muted px-3">Your cart is empty</p>
}

<hr class="dropdown-divider">
<div class="d-flex justify-content-between mb-3 px-3">
    <h6 class="mb-0">Total:</h6>
    <span class="fw-bold text-dark">$@ViewBag.Total</span>
</div>
<a class="btn btn-premium w-100" href="/cart">
    <i class="fas fa-shopping-bag me-2"></i>View Cart
</a>
